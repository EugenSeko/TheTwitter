        <StackLayout Orientation="Vertical">
            <Label Text="{Binding UserName}" TextColor="Black" FontAttributes="Bold" />

            <Label Text="{Binding Text}" TextColor="Red" MaxLines="5" LineBreakMode="TailTruncation"/>

