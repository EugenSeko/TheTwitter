                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding .}" Height="120"/>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
    </StackLayout>-->
</DataTemplate>