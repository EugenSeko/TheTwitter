<?xml version="1.0" encoding="utf-8" ?>
<view:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:sh="http://sharpnado.com"
                      xmlns:controls="clr-namespace:InterTwitter.Controls"
                      xmlns:view="clr-namespace:InterTwitter.Views"
                      x:Class="InterTwitter.Views.CreateTweetPage">

    <view:BaseContentPage.Content>

        <controls:CustomGrid RowSpacing="0"
                             BackgroundColor="{DynamicResource appcolor_i2}">

            <controls:CustomGrid.RowDefinitions>
                
                <RowDefinition Height="56" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                
            </controls:CustomGrid.RowDefinitions>

            <StackLayout Grid.Row="0"
                         Grid.Column="0"
                         Orientation="Horizontal">

                <Image Source="{DynamicResource ic_cancel_gray}"
                       HorizontalOptions="Start"
                       Margin="15, 2, 14, 0"
                       WidthRequest="33"/> 

                <Button CornerRadius="15 "
                        Margin="14"
                        Padding="0"
                        Text="Post"
                        TextTransform="None"
                        FontFamily="Ubuntu-Medium"
                        FontSize="{DynamicResource tsize_i4}"
                        TextColor="{DynamicResource appcolor_i2}"
                        BackgroundColor="{DynamicResource appcolor_i1}"
                        HorizontalOptions="EndAndExpand"/>

            </StackLayout>
            
            <Grid Grid.Row="1"
                  Grid.Column="0"
                  RowSpacing="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Row="0"
                             Grid.Column="0"
                             Spacing="0">

                    <Image Source="{DynamicResource pic_profile_small}"
                           HeightRequest="28"
                           Margin="14, 14, 0, 0"
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>

                <controls:CustomScrollView Grid.Row="0"
                                           Grid.Column="1"
                                           VerticalScrollBarVisibility="Never">

                    <StackLayout BackgroundColor="{DynamicResource appcolor_i2}">

                        <controls:CustomEditor Text="{Binding Text}"
                                               TextColor="{DynamicResource appcolor_i3}"
                                               FontSize="{DynamicResource tsize_i4}"
                                               FontFamily="Ubuntu-Regular"
                                               BackgroundColor="{DynamicResource appcolor_i2}"
                                               Placeholder="Start writing"
                                               PlaceholderColor="{DynamicResource appcolor_i4}"
                                               VerticalOptions="Start"
                                               IsExpandable="True"
                                               CorrectLength="250"
                                               MaxLength="300"
                                               Margin="14"/>

                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    VerticalOptions="Start"
                                    BindableLayout.ItemsSource="{Binding ListUploadPhotos}">
                            
                            <BindableLayout.ItemTemplate>
                                
                                <DataTemplate>
                                    
                                    <Grid HeightRequest="65"
                                          Margin="7, 0, 0, 0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="44.1167"/>
                                            <RowDefinition Height="21"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0"
                                               Source="{Binding PathImage}"
                                               HeightRequest="44.1167"
                                               WidthRequest="44.1167"/>

                                        <Frame Grid.Row="1"
                                               HasShadow="False"
                                               Padding="0"
                                               Margin="41.11, -60, 0, 60"
                                               BackgroundColor="Transparent">

                                            <Image Source="{Binding PathActionImage}"
                                                   HeightRequest="21"
                                                   WidthRequest="21"/>

                                        </Frame>

                                    </Grid>
                                    
                                </DataTemplate>
                                
                            </BindableLayout.ItemTemplate>

                        </FlexLayout>
                        
                    </StackLayout>

                </controls:CustomScrollView>

            </Grid>

            <sh:Shadows Grid.Row="2"
                        Grid.Column="0"
                        VerticalOptions="EndAndExpand"
                        HeightRequest="56"
                        Shades="{sh:SingleShade Offset='0, -2.32',
                                                Opacity={OnPlatform Android=0.05, iOS=0.05},
                                                BlurRadius={OnPlatform Android=14, iOS=14},
                                                Color=Black}">

                <StackLayout Spacing="0"
                             BackgroundColor="{DynamicResource appcolor_i2}">

                    <BoxView Color="{DynamicResource appcolor_i6}"
                             HeightRequest="1"/>

                    <StackLayout Orientation="Horizontal">

                        <Image Source="{DynamicResource ic_media_blue}"
                               Margin="13.93, 4, 0, 4"
                               WidthRequest="28.86"/>
                        
                        <Image Source="{DynamicResource ic_gif_blue}"
                               Margin="13.93, 4, 0, 4"
                               WidthRequest="28.86"/>

                        <Image Source="{DynamicResource ic_video_square_blue}"
                               Margin="13.93, 4, 0, 4"
                               WidthRequest="28.86"/>

                        <controls:CircleProgressBar HorizontalOptions="EndAndExpand"
                                                    HeightRequest="24"
                                                    WidthRequest="24"
                                                    Text="{Binding CircleProgressBarText}"
                                                    TextColor="{Binding CircleProgressBarTextColor}"
                                                    FontScale="{Binding CircleProgressBarFontScale}"
                                                    FontFamily="Ubuntu-Regular"
                                                    FontAttributes="{Binding CircleProgressBarFontAttributes}"
                                                    Value="{Binding CircleProgressBarValue}"
                                                    Minimum="0"
                                                    Maximum="250"
                                                    LineWidth="15"
                                                    ProgressLineColor="{Binding CircleProgressBarProgressLineColor}"
                                                    BackgroundLineColor="{DynamicResource appcolor_i5}"
                                                    BackgroundProgressColor="{DynamicResource appcolor_i2}"
                                                    BackgroundColor="Transparent"
                                                    Padding="16"/>
                        
                    </StackLayout>

                </StackLayout>

            </sh:Shadows>

        </controls:CustomGrid>

    </view:BaseContentPage.Content>
    
</view:BaseContentPage>