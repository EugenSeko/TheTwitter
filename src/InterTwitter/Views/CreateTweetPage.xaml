<?xml version="1.0" encoding="utf-8" ?>
<view:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:sh="http://sharpnado.com"
                      xmlns:controls="clr-namespace:InterTwitter.Controls"
                      xmlns:view="clr-namespace:InterTwitter.Views"
                      x:Class="InterTwitter.Views.CreateTweetPage">

    <view:BaseContentPage.Content>

        <controls:CustomGrid RowSpacing="0"
                             BackgroundColor="{DynamicResource appcolor_i2}">

            <controls:CustomGrid.RowDefinitions>
                
                <RowDefinition Height="56" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                
            </controls:CustomGrid.RowDefinitions>

            <StackLayout Grid.Row="0"
                         Grid.Column="0"
                         Orientation="Horizontal">

                <Image Source="{DynamicResource ic_cancel_gray}"
                       HorizontalOptions="Start"
                       Margin="15, 2, 14, 0"
                       WidthRequest="33"/> 

                <Button CornerRadius="25"
                        Margin="14"
                        Padding="0"
                        Text="Post"
                        TextTransform="None"
                        FontFamily="Ubuntu-Medium"
                        FontSize="{DynamicResource tsize_i4}"
                        TextColor="{DynamicResource appcolor_i2}"
                        BackgroundColor="{DynamicResource appcolor_i1}"
                        HorizontalOptions="EndAndExpand"/>

            </StackLayout>
            
            <Grid Grid.Row="1"
                  Grid.Column="0"
                  RowSpacing="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Row="0"
                             Grid.Column="0"
                             Spacing="0">

                    <Image Source="{DynamicResource pic_profile_small}"
                           HeightRequest="28"
                           Margin="14, 14, 0, 0"
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>

                <controls:CustomScrollView Grid.Row="0"
                                           Grid.Column="1"
                                           VerticalScrollBarVisibility="Never">

                    <StackLayout BackgroundColor="{DynamicResource appcolor_i2}"
                                 Padding="14">

                        <controls:CustomEditor Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. A, neque, metus ipsum fermentum morbi at."
                                               TextColor="{DynamicResource appcolor_i3}"
                                               FontSize="{DynamicResource tsize_i4}"
                                               FontFamily="Ubuntu-Regular"
                                               BackgroundColor="{DynamicResource appcolor_i2}"
                                               Placeholder="Start writing"
                                               PlaceholderColor="{DynamicResource appcolor_i4}"
                                               VerticalOptions="Start"
                                               IsExpandable="True"
                                               CorrectLength="250"
                                               MaxLength="300"/>

                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Start">
                            
                            <Label Text="video"/>
                            <Label Text="photos"/>
                            <Label Text="gif"/>

                        </StackLayout>

                    </StackLayout>

                </controls:CustomScrollView>

            </Grid>

            <sh:Shadows Grid.Row="2"
                        Grid.Column="0"
                        VerticalOptions="EndAndExpand"
                        HeightRequest="56"
                        Shades="{sh:SingleShade Offset='0, -2',
                                                Opacity={OnPlatform Android=1, iOS=0.7},
                                                BlurRadius={OnPlatform Android=14, iOS=14},
                                                Color={StaticResource appcolor_i6}}">

                <StackLayout Spacing="0"
                             BackgroundColor="{DynamicResource appcolor_i2}">

                    <BoxView Color="{DynamicResource appcolor_i6}"
                         HeightRequest="1"/>

                    <StackLayout Orientation="Horizontal">

                        <Button Text="Refresh" 
                            Command="{Binding OnRefresh}"/>

                        <Label Text="Video"/>

                        <Label Text="Photos"/>

                        <controls:CircleProgressBar HorizontalOptions="EndAndExpand"
                                                HeightRequest="24"
                                                WidthRequest="24"
                                                Text="{Binding CircleProgressBarText}"
                                                TextColor="{Binding CircleProgressBarTextColor}"
                                                FontScale="{Binding CircleProgressBarFontScale}"
                                                FontFamily="Ubuntu-Regular"
                                                FontAttributes="{Binding CircleProgressBarFontAttributes}"
                                                Value="{Binding CircleProgressBarValue}"
                                                Minimum="0"
                                                Maximum="30"
                                                LineWidth="15"
                                                ProgressLineColor="{Binding CircleProgressBarProgressLineColor}"
                                                BackgroundLineColor="{DynamicResource appcolor_i5}"
                                                BackgroundProgressColor="{DynamicResource appcolor_i2}"
                                                BackgroundColor="Transparent"
                                                Padding="16"/>
                    </StackLayout>

                </StackLayout>

            </sh:Shadows>

        </controls:CustomGrid>

    </view:BaseContentPage.Content>
    
</view:BaseContentPage>