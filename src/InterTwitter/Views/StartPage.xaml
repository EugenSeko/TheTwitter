<?xml version="1.0" encoding="utf-8" ?>
<view:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:view="clr-namespace:InterTwitter.Views"
                      xmlns:controls="clr-namespace:InterTwitter.Controls"
                      xmlns:res="clr-namespace:InterTwitter.Helpers;assembly=InterTwitter"
                      x:Class="InterTwitter.Views.StartPage">
    <view:BaseContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="170"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                <Grid Grid.Row="0" ColumnSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton Grid.Column="0" Source="ic_left_gray.png" HeightRequest="70" Margin="0,10,0,0" Aspect="AspectFit" VerticalOptions="StartAndExpand"/>
                    <Image Source="pic_owl_blue_small.png" Grid.Column="1" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" Aspect="AspectFill" Margin="0,16,0,0" HeightRequest="73" WidthRequest="50"/>
                    <Label Text="{res:Translate CreateYourAccount}"  Grid.Column="1" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource LightPrimaryColor}" Margin="0,100,0,0" HorizontalOptions="CenterAndExpand" />
                 </Grid>
            <Label Grid.Row="1" 
                   Margin="24,0,0,0"
                   Text="{res:Translate Email}"
                   FontSize="16"
                   Style="{StaticResource secondLabel}"/>
            <controls:CustomEntry Grid.Row="1"
                                  Margin="20,18,20,0"
                                      Text="{Binding Email}"
                                  ImageSource="ic_eye_gray.png"
                                  IsVisible="true"
                                      Placeholder="{res:Translate EnterEmail}"/>
            <Label Grid.Row="1" Text="{res:Translate WrongEmail}" 
                       FontSize="15"
                       Margin="20,65,0,0" 
                       Style="{StaticResource errorLabel}"
                       IsVisible="{Binding IsWrongEmail}"/>
            
                <Label Grid.Row="2" Text="{res:Translate Password}" 
                           FontSize="16"
                           Margin="24,0,0,0"
                           Style="{StaticResource secondLabel}" />
                <controls:CustomEntry Grid.Row="2" Text="{Binding Password}" Margin="20,18,20,0"
                                          Placeholder="{res:Translate EnterPassword}" />
            <Label Grid.Row="2" 
                       Text="{res:Translate PasswordIncorrect}"
                       FontSize="15" 
                       Style="{StaticResource errorLabel}"
                       Margin="20,65,0,0"     
                       IsVisible="{Binding IsIncorrectPassword}" />

            <StackLayout Grid.Row="3" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="{res:Translate SignUp}" WidthRequest="218" CornerRadius="25" HeightRequest="50"
                            Command="{Binding MainTabPageCommand}"
                            Style="{StaticResource baseButton}"/>
            </StackLayout>

            <StackLayout Grid.Row="4" HorizontalOptions="Center" Margin="0,20,0,0" >
                <Button Command="{Binding GoogleMainCommand}" WidthRequest="218"
                                 Text="{res:Translate SignIn}" BorderColor="Transparent"
                                 Style="{StaticResource inverseButtonStyle}"/>
            </StackLayout>
        </Grid>
    </view:BaseContentPage.Content>
</view:BaseContentPage>
